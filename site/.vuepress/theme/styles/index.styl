@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
$contentClass = '.content__default'

body
    max-width 55rem
    margin 0.75rem auto
    padding 0.75rem 1.25rem
    font-family 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    font-size 1rem
    color $textColor
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-kerning auto
    box-sizing border-box
    line-height 1.75rem
    text-align left
    text-rendering optimizeLegibility

a
  color $accentColor
  text-decoration none
  border-bottom 2px solid transparent

a:hover
  border-bottom-color $accentColor

.nav-root a
  color $textColor
  text-decoration none

.nav-root a:hover
  color $accentColor
  border-bottom none

.nav-root .home-link
  background-color #f7df1e
  padding 0.5rem
  color #000

.nav-root, .title-root
    margin 0.25rem
    display flex
    justify-content space-between
    align-items baseline

.nav-root span .about
  margin 0 0.5rem

footer, .root .author, .root .date, .root .tags
  margin 0.25rem

footer
  font-size 0.875rem

footer .lu
  margin-top 1.75rem
  margin-bottom 0.5rem

footer span .copyright
  margin-top 0.5rem

footer .cp
  display flex
  align-items baseline
  justify-content space-between

footer a
  color $textColor

footer a svg
  padding 0 0.25rem

footer a:hover
  color $accentColor
  border-bottom none

h1, h2, h3, h4, h5, h6
    font-weight lighter
    overflow hidden
    display table
    line-height 2.5rem

h2
    border-bottom 0.125rem dashed $accentColor

p a code
  color $accentColor
  font-family 'Consolas', 'Dejavu Sans Mono', 'Menlo', monospace

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none
    opacity 1

blockquote
  font-size 1rem
  color #555555;
  border-left .2rem solid #dfe2e5
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

.custom-block.tip
  background-color #f3f5f7
  border-color #42b983

.custom-block.warning
  background-color rgba(255,229,100,.3)
  border-color #e7c000
  color #6b5900

.custom-block.danger
  background-color #ffe6e6
  border-color #c00
  color #4d0000

.custom-block.details
  display block
  position relative
  border-radius 0.25rem
  margin 1.6em 0
  padding 1.6em
  background-color #eee

.custom-block .custom-block-title
  font-weight 600
  margin-bottom -.4rem

.custom-block.danger, .custom-block.tip, .custom-block.warning
  padding .1rem 1.5rem
  border-left-width .5rem
  border-left-style solid
  margin 1rem 0

.root .error
  max-width 100%

.post
  border-bottom 1px solid #eee

.post-list
  list-style-type none
  padding-left 0
  margin 0.25rem

.post-list h2
  border-bottom none

{$contentClass}
    margin 0.25rem

{$contentClass}
    img
        display block
        margin-left auto
        margin-right auto

code
  color lighten($textColor, 20%)
  padding 0.25rem 0.5rem
  margin 0
  font-family 'Consolas', 'Dejavu Sans Mono', 'Menlo', monospace
  font-size 0.875rem
  background-color rgba(27,31,35,0.05)
  border-radius 3px
  .token
    &.deleted
      color #EC5975
    &.inserted
      color $accentColor

{$contentClass}
  pre, pre[class*="language-"]
    line-height 1.4
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    background-color $codeBgColor
    border-radius 6px
    overflow auto
    code
      color #fff
      padding 0
      background-color transparent
      border-radius 0

div[class*="language-"]
  position relative
  background-color $codeBgColor
  border-radius 6px
  .highlight-lines
    user-select none
    padding-top 1.3rem
    position absolute
    top 0
    left 0
    width 100%
    line-height 1.4
    .highlighted
      background-color rgba(0, 0, 0, 66%)
  pre, pre[class*="language-"]
    background transparent
    position relative
    z-index 1
  &::before
    position absolute
    z-index 3
    top 0.8em
    right 1em
    font-size 0.75rem
    color rgba(255, 255, 255, 0.4)
  &:not(.line-numbers-mode)
    .line-numbers-wrapper
      display none
  &.line-numbers-mode
    .highlight-lines .highlighted
        position relative
        &:before
          content ' '
          position absolute
          z-index 3
          left 0
          top 0
          display block
          width $lineNumbersWrapperWidth
          height 100%
          background-color rgba(0, 0, 0, 66%)
    pre
      padding-left $lineNumbersWrapperWidth + 1 rem
      vertical-align middle
    .line-numbers-wrapper
      position absolute
      top 0
      width $lineNumbersWrapperWidth
      text-align center
      color rgba(255, 255, 255, 0.3)
      padding 1.25rem 0
      line-height 1.4
      br
        user-select none
      .line-number
        position relative
        z-index 4
        user-select none
        font-size 0.85em
    &::after
      content ''
      position absolute
      z-index 2
      top 0
      left 0
      width $lineNumbersWrapperWidth
      height 100%
      border-radius 6px 0 0 6px
      border-right 1px solid rgba(0, 0, 0, 66%)
      background-color $codeBgColor


for lang in $codeLang
  div{'[class~="language-' + lang + '"]'}
    &:before
      content ('' + lang)

div[class~="language-javascript"]
  &:before
    content "js"

div[class~="language-typescript"]
  &:before
    content "ts"

div[class~="language-markup"]
  &:before
    content "html"

div[class~="language-markdown"]
  &:before
    content "md"

div[class~="language-json"]:before
  content "json"

div[class~="language-ruby"]:before
  content "rb"

div[class~="language-python"]:before
  content "py"

div[class~="language-bash"]:before
  content "sh"

div[class~="language-php"]:before
  content "php"

@import '~prismjs/themes/prism-tomorrow.css'