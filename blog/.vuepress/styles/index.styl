@import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');

body
  font-size: 1.125rem
  font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  letter-spacing: 0.025rem

a
  text-decoration: none

h1, h2, h3, h4, h5, h6, .header-wrapper .title a, .header-wrapper .header-right-wrap .nav .nav-item a, .ui-post-title a, ul .suggestion, #mobile-header .mobile-header-title .mobile-home-link, .mobile-nav-item a
  font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  font-weight: 300
  letter-spacing: 0.05rem

.content-wrapper
  padding: 6.25rem 2rem 1rem 2rem

.header-wrapper .header-right-wrap .nav .nav-item a
  border-bottom: 0.125rem solid transparent
  transition: color 0.5s ease, border-color 0.5s ease

.header-wrapper .header-right-wrap .nav .nav-item a:hover
  border-bottom-color: #4c8bf5

#header, #mobile-header .mobile-header-title
  box-shadow: none
  border-bottom: 0.125rem solid #eee

.ui-post
  transition: color 0.5s ease, border-color 0.5s ease

.ui-post:hover
  border-bottom-color: #4c8bf5

p.ui-post-summary, div.ui-post-meta, span, time
  font-size: 0.95rem
  color: #424445

.footer .footer-right-wrap .copyright .copyright-item a[data-v-a69b5ef8]
  font-size: 1rem

div.post-meta, p, li a
  font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  font-size: 1.125rem
  letter-spacing: 0.05rem

div.vuepress-toc .vuepress-toc-item a
  font-size: 0.9rem

article.vuepress-blog-theme-content
  box-shadow: none

.footer .footer-right-wrap .copyright .copyright-item
  margin-top: 0.5rem